<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00bbff" /> <!-- Warna latar belakang saat ditekan -->
            <corners android:radius="8dp" /> <!-- Sudut melengkung -->
        </shape>
    </item>
    <!-- State saat tombol dalam keadaan normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00bbff" /> <!-- Warna latar belakang normal -->
            <corners android:radius="8dp" /> <!-- Sudut melengkung -->
        </shape>
    </item>
</selector>
